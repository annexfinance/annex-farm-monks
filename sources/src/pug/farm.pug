extends base/_layout
block head
    title Swipe Swap Farm
block headerClass
    - var activeItem = 'farm'
block mainClass
    - var mainClass = 'main--flex main--biege'
block page
    div#farm.farm
        .container
            .farm-settings
                .farm-settings__stakeonly

                .farm-settings__sort
                    select(id="farm-sort")
                        option(value="apy") APY
                        option(value="allocpoint") AllocPoint
                        option(value="earned") Earned
                        option(value="liquidity") Liquidity
                .farm-settings__search
                    input(id="farm-search" placeholder="Search Farms")
            .farm-list
                .farm-list-items
                #loading
                    .farm-loading 
                        div 
                        div 
                        div 
                        div
                #no-pools
                    .farm-no-pools There are no pools

                                    

block footer

        block scripts
            script(src="js/farm.js")
            script(src="js/bsc.hook.js")
